{% extends '@Pub/activities/activityMenu.html.twig' %}
{% block stylesheets %}
    {{  parent() }}
    {{ encore_entry_link_tags('walk') }}
{% endblock %}
{% block body %}
    {{ parent() }}
    <div id="activityContent">
        <div class="details">
            {{ include('@Pub/walk/_form.html.twig', {
                button_text: 'Save Walk'
            }) }}
        </div>
        <div id="editMapping" class="mapping">
            <div class="apierror">
                <h4>
                    <i class="exclamation triangle icon"></i>
                    We're sorry there appears to be an issue with the mapping API
                </h4>
                <p>
                    Please contact the administrator for assistance
                </p>
            </div>
            <div id="map" style='width: 100%; height: 100%;'></div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{  parent() }}
    {{ encore_entry_script_tags('walk') }}
{% endblock %}

